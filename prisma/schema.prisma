datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Project {
  id          Int         @id @default(autoincrement())
  name        String
  description String?
  status      ProjectStatus @default(IN_PROGRESS)
  priority    Priority?
  dueDate     DateTime?
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt
  resources   Resource[]
  tasks       Task[]
}

model Area {
  id          Int       @id @default(autoincrement())
  name        String
  description String?
  priority    Priority  @default(P2)
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  resources   Resource[]
  tasks       Task[]
}

model Resource {
  id          Int       @id @default(autoincrement())
  name        String
  description String?
  type        String?
  url         String?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  project     Project?  @relation(fields: [projectId], references: [id])
  projectId   Int?
  area        Area?     @relation(fields: [areaId], references: [id])
  areaId      Int?
}

model Archive {
  id          Int         @id @default(autoincrement())
  name        String
  description String?
  type        ArchiveType
  originalId  Int
  archivedAt  DateTime    @default(now())
  archivedData Json?
}

model Task {
  id          Int         @id @default(autoincrement())
  name        String
  description String?
  status      TaskStatus  @default(TODO)
  priority    Priority?
  energy      Energy?
  context     Context?
  notes       String?
  dueDate     DateTime?
  completed   Boolean     @default(false)
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt
  project     Project?    @relation(fields: [projectId], references: [id])
  projectId   Int?
  area        Area?       @relation(fields: [areaId], references: [id])
  areaId      Int?
}

enum ProjectStatus {
  ACTIVE
  IN_PROGRESS
  COMPLETED
  ON_HOLD
}

enum TaskStatus {
  TODO
  IN_PROGRESS
  COMPLETED
  BLOCKED
}

enum Priority {
  P1
  P2
  P3
}

enum Energy {
  HIGH
  MEDIUM
  LOW
}

enum Context {
  HOME
  COMPUTER
  CALLS
  ERRANDS
}

enum ArchiveType {
  PROJECT
  AREA
  RESOURCE
  TASK
}